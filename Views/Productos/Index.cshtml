@model IEnumerable<Gran_Aki_Version_Final.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Registros</h1>

<p>
    <a asp-action="Create">Crear Registro</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductosNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductosPrecio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Categoria)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.ImageFile)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductosNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductosPrecio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Categoria.CategoriaId)
            </td>
            <td >
                <img src="@("/Producto/" + item.ImageName)" asp-append-version="true" class="rounded" width="25" height="25" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductosId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ProductosId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductosId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

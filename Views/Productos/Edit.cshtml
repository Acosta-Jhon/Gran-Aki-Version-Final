@model Gran_Aki_Version_Final.Models.Producto

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Producto</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductosId" />
            <div class="form-group">
                <label asp-for="ProductosNombre" class="control-label"></label>
                <input asp-for="ProductosNombre" class="form-control" />
                <span asp-validation-for="ProductosNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductosPrecio" class="control-label"></label>
                <input asp-for="ProductosPrecio" class="form-control" />
                <span asp-validation-for="ProductosPrecio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label"></label>
                <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
                <span asp-validation-for="CategoriaId" class="text-danger"></span>
            </div>
            <div class="col h-25">
                Cargar Imagen
            </div>
            <div class="col h-25">
                <img src="@("/Producto/" + Model.ImageName)" asp-append-version="true" class="w-25 h-25" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Gran_Aki_Version_Final.Models.DetalleProductosFactura

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>DetalleProductosFactura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DetalleId" />
            <div class="form-group">
                <label asp-for="DetalleCantidad" class="control-label"></label>
                <input asp-for="DetalleCantidad" class="form-control" />
                <span asp-validation-for="DetalleCantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetalleIva" class="control-label"></label>
                <input asp-for="DetalleIva" class="form-control" />
                <span asp-validation-for="DetalleIva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetallePrecioUnitario" class="control-label"></label>
                <input asp-for="DetallePrecioUnitario" class="form-control" />
                <span asp-validation-for="DetallePrecioUnitario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetallePrecioTotal" class="control-label"></label>
                <input asp-for="DetallePrecioTotal" class="form-control" />
                <span asp-validation-for="DetallePrecioTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetalleSubTotal" class="control-label"></label>
                <input asp-for="DetalleSubTotal" class="form-control" />
                <span asp-validation-for="DetalleSubTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacturaId" class="control-label"></label>
                <select asp-for="FacturaId" class="form-control" asp-items="ViewBag.FacturaId"></select>
                <span asp-validation-for="FacturaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductosId" class="control-label"></label>
                <input asp-for="ProductosId" class="form-control" />
                <span asp-validation-for="ProductosId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Gran_Aki_Version_Final.Models.Persona

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>Seguro que desea eliminar el registro?</h3>
<div>
    <h4>Persona</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonaNombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonaNombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonaApellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonaApellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonaEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonaEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonaFechaNacimiento)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonaFechaNacimiento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonaTelefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PersonaTelefono)
        </dd>
        <dd class="col-auto font-weight-bold">
            Cargar Imagen
        </dd>
        <dt class="col-auto w-50 h-50">
            <img src="@("/Image/" + Model.ImageName)" asp-append-version="true" class="w-50 h-50" />
        </dt>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="PersonaId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Regresar</a>
    </form>
</div>
